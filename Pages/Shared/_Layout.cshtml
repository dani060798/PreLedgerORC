<!DOCTYPE html>
<html lang="de" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PreLedgerORC</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="brand">
                    <div class="brand-dot"></div>
                    <div>
                        <div class="brand-title">ScanHub</div>
                        <div class="brand-sub">PreLedgerORC</div>
                    </div>
                </div>
            </div>

            <div class="sidebar-content" id="customersSidebar">
                @await Component.InvokeAsync("CustomersSidebar")
            </div>

            <div class="sidebar-footer">
                <div class="small text-muted">Lokal · WLAN · MVP</div>
            </div>
        </aside>

        <main class="main">
            <div class="topbar">
                <a class="theme-toggle" href="/" title="Home" aria-label="Home">
                    <span class="theme-icon" aria-hidden="true">⌂</span>
                    <span class="theme-label">Home</span>
                </a>

                <div class="topbar-spacer"></div>

                <button class="theme-toggle" type="button" id="themeToggle" aria-label="Toggle theme">
                    <span class="theme-icon" aria-hidden="true">◐</span>
                    <span class="theme-label">Light/Dark</span>
                </button>
            </div>

            <div class="content-wrap">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Add Customer Modal -->
    <div class="modal fade" id="addCustomerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content glass">
                <form method="post" action="/Customers/Actions?handler=Create">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Neuer Kunde</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <label class="form-label">Kundenname</label>
                        <input class="form-control" name="Name" maxlength="200" placeholder="z.B. Müller GmbH" required />
                        <div class="form-text">Wird in SQLite gespeichert. Ordner werden später automatisch genutzt.</div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Abbrechen</button>
                        <button type="submit" class="btn btn-primary">Anlegen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Context Menu -->
    <div id="contextMenu" class="context-menu" hidden>
        <button class="context-item" type="button" data-action="create-folder">Create Folder</button>
        <button class="context-item" type="button" data-action="create-notes">Create Notes</button>
        <div class="context-sep"></div>
        <button class="context-item danger" type="button" data-action="delete-note">Delete Note</button>
    </div>

    <!-- Hidden forms for context actions -->
    <form id="ctxCreateFolderForm" method="post" action="/Customers/Actions?handler=CreateFolder" class="d-none">
        @Html.AntiForgeryToken()
        <input type="hidden" name="CustomerId" id="ctxCustomerId_CreateFolder" />
        <input type="hidden" name="FolderName" id="ctxFolderName" />
        <input type="hidden" name="ParentRelPath" id="ctxParentRelPath_CreateFolder" />
    </form>

    <form id="ctxCreateNotesForm" method="post" action="/Customers/Actions?handler=CreateNotes" class="d-none">
        @Html.AntiForgeryToken()
        <input type="hidden" name="CustomerId" id="ctxCustomerId_CreateNotes" />
        <input type="hidden" name="Title" id="ctxNotesTitle" />
        <input type="hidden" name="ParentRelPath" id="ctxParentRelPath_CreateNotes" />
    </form>

    <form id="ctxDeleteNoteForm" method="post" action="/Customers/Actions?handler=DeleteNote" class="d-none">
        @Html.AntiForgeryToken()
        <input type="hidden" name="CustomerId" id="ctxCustomerId_DeleteNote" />
        <input type="hidden" name="RelPath" id="ctxRelPath_DeleteNote" />
    </form>

    <form id="ctxMoveNoteForm" method="post" action="/Customers/Actions?handler=MoveNote" class="d-none">
        @Html.AntiForgeryToken()
        <input type="hidden" name="CustomerId" id="ctxCustomerId_MoveNote" />
        <input type="hidden" name="SourceRelPath" id="ctxSourceRelPath_MoveNote" />
        <input type="hidden" name="TargetFolderRelPath" id="ctxTargetFolderRelPath_MoveNote" />
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
