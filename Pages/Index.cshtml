@page
@model PreLedgerORC.Pages.IndexModel

<div class="hero">
    <div class="hero-card">
        <h1 class="hero-title">ScanHub</h1>
        <p class="hero-sub">
            Wähle links einen Kunden aus oder lege einen neuen an.<br />
            <span class="muted">History / Scans / OCR / Export kommen als nächstes.</span>
        </p>

        <div class="hero-hint">
            <div class="hint-title">Geplant</div>
            <ul class="hint-list">
                <li>Mobile Scan von der Startseite</li>
                <li>Upload → Lean OCR → Felder extrahieren</li>
                <li>Export (CSV/API) in Buchhaltung</li>
                <li>Optional LLM: Zusammenfassung / Chat pro Kunde</li>
            </ul>
        </div>
        <div class="home-actions">
            <button class="home-action"
                    data-bs-toggle="modal"
                    data-bs-target="#addCustomerModal">
                <div class="action-icon">✏️</div>
                <div class="action-text">Kunde anlegen</div>
            </button>

            <button class="home-action">
                <div class="action-icon">⬆️</div>
                <div class="action-text">Hochladen</div>
            </button>

            <button class="home-action">
                <div class="action-icon">📷</div>
                <div class="action-text">Scannen</div>
            </button>
        </div>
    </div>
</div>